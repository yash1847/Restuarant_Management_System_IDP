@using Microsoft.AspNetCore.Http


<ul class="navbar-nav">

    <ul class="nav-item"></ul>
    @* @if(user == null) *@
    @if (SignInManager.IsSignedIn(User))
    {
        @if (User.IsInRole(SD.Customer))
        {
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Hi @User.Identity?.Name
            </a>
            <div class="dropdown-menu" aria-labelledby="profileDropdown">
                <a class="dropdown-item" asp-action="Profile" asp-controller="Account">View Profile</a>
                <a class="dropdown-item" asp-action="ViewAddress" asp-controller="Customer">View Address</a>
            </div>
        </li>
        }
        else{
            <li class="nav-item">
                <a class="nav-link" asp-action="Profile" asp-controller="Account">Hi @User.Identity?.Name</a>
            </li>
        }
        <li class="nav-item">
            <a class="nav-link" asp-action="Logout" asp-controller="Account">Logout</a>
        </li>
}
else
{
        <li class="nav-item">
            <a class="nav-link" asp-action="Register" asp-controller="Account">Register</a>
        </li>
        <li>
            <a class="nav-link" asp-action="Login" asp-controller="Account">Login</a>
        </li>
}
</ul>