@model IEnumerable<Restuarant_Management_System_IDP.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info"> Category List</h2>
        </div>
        <div class="col-6 text-right">
            <p>
                <a asp-action="Create" class="btn btn-info"> <i class="fas fa-plus"></i> &nbsp; Create New</a>
            </p>
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @*<label asp-for="First().Name"></label>*@
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>
                            @* <label asp-for="category.Name"></label> *@
                            @Html.DisplayFor(m => category.Name)
                        </td>
                        <td>
                        <td style="width:150px">
                            <div class="btn btn-group" role="group">
                                <a class="btn btn-primary text-white" asp-action="Edit" asp-route-Id="@category.Id">Edit</a>
                                <a class="btn btn-success text-white" asp-action="Details" asp-route-Id="@category.Id">Details</a>
                                    @*<a class="btn btn-danger text-white" asp-action="Delete" asp-route-Id="@Model"><i class="fas fa-trash-alt"></i></a>*@
                                <button asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger text-white"><i class="fas fa-trash-alt"></i></button>
                            </div>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p> No category exists....</p>
        }

    </div>
</div>