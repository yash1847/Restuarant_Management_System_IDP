@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

@if(User.IsInRole(SD.Admin)){
    <h1>Register a new Employee</h1>
}
else{
<h1>Create your Account</h1>
}
@* <h4>RegisterViewModel</h4> *@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label mb-1"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="FullName" class="control-label mb-1"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Email" class="control-label mb-1"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Contact" class="control-label mb-1"></label>
                <input asp-for="Contact" class="form-control" />
                <span asp-validation-for="Contact" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Password" class="control-label mb-1"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-labe mb-1"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <br />
            @if (User.IsInRole(SD.Admin))
            {
                <div class="form-group">
                    <div class="col-3">
                    </div>
                    <div class="col-8">
                        <input type="radio" name="rdUserRole" value="@SD.Kitchen" checked /> @SD.Kitchen
                        <input type="radio" name="rdUserRole" value="@SD.FrontDesk" /> @SD.FrontDesk
                        @* <input type="radio" name="rdUserRole" value="@SD.Admin" /> @SD.Admin *@
                    </div>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<br />
<div>
    Have an account? 
    <a asp-action="Login" asp-controller="Account"> Sign in</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
